<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MapsFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/openMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dashboard_white_24dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_circle_color_primary"
        android:contentDescription="To Dashboard" />

    <FrameLayout
        android:id="@+id/backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:behavior_peekHeight="130dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!--Bagian yang selalu kelihatan -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapPeekBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:name="com.bangkit.jagawana.ui.MapItemBottomSheetFragment"/>

        <!--Bagian yang bisa disembunyiin(Digeser ke bawah) -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/history"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.bangkit.jagawana.ui.HistoryFragment"/>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>